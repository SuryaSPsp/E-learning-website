<script>
        function toggleEnrollment(anchor) {
            const button = anchor.querySelector('.btn');
            const isEnrolled = button.getAttribute('data-enrolled') === 'true';

            if (isEnrolled) {
                button.textContent = 'Enroll Now';
                button.setAttribute('data-enrolled', 'false');
            } else {
                button.textContent = 'Unenroll';
                button.setAttribute('data-enrolled', 'true');
            }
        }
